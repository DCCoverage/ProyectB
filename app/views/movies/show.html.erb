<div class="tile is-ancestor">
  <div class="tile is-4">
        <%= image_tag @movie.image %>
  </div>
  <div class="tile is-vertical box">
    <div class="tile is-vertical has-text-centered">
      <p class="title">
        <strong>Nombre:</strong>
        <%= @movie.name %>
      </p>
      <p class="subtitle">
        <strong>Descripción:</strong>
        <%= @movie.description %>
      </p>
    </div>
    <div class="tile center">
      <%= link_to 'Nueva función', new_movie_show_time_path(@movie), class: 'button' %>

      <%= link_to 'Editar', edit_movie_path(@movie), class: 'button' %>
      <%= link_to 'Atrás', :back, class: 'button' %>
    </div>
  </div>
</div>
