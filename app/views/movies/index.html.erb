<section class="hero">
  <div class="hero-body">
    <p class="title">Películas</p>
    <p class="subtitle">
      Encuentra los nuevos estrenos y las mejores películas
    </p>
  </div>
</section>

<section>
  <% @movies.each_slice 2 do |movie_group| %>
    <div class="tile is-ancestor ">
      <% movie_group.each do |movie| %>
        <div class="tile is-parent is-6">
          <div class="tile is-child card">
            <div class="card-image">
              <figure class="image is-3by2">
                <%= image_tag movie.image, class: 'is-fullwidth' %>
              </figure>
            </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                  <p class="title is-4"><%= movie.name %></p>
                  <div class="field is-grouped">
                    <%=
                      link_to 'Ver funciones',
                              movie_show_times_path(movie),
                              class: 'button control is-primary'
                    %>
                    <%=
                      link_to 'Editar película',
                              edit_movie_path(movie),
                              class: 'button control'
                    %>
                    <%=
                      link_to 'Eliminar película',
                              movie,
                              class: 'button control is-danger',
                              method: :delete,
                              data: {
                                confirm: 'Estas seguro?',
                              }
                    %>
                  </div>
                </div>
              </div>

              <div class="content">
                <%= movie.description %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</section>

<section>
  <%=
    link_to 'Agregar una pelicula', new_movie_path, class: 'button is-warning'
  %>
</section>
