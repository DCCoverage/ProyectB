<%= form_for @show_time, url:url, method:method do |form| %>
  <% if @show_time.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show_time.errors.count, "error") %> prohibited this show_time from being saved:</h2>

      <ul>
        <% @show_time.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="subtitle">
    <label class="label"><%= @show_time.movie.name %></label>
  </div>

  <div class="field">
    <%= form.label :date, class: 'label' %>
    <%= form.date_field :date, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :room_id, class: 'label' %>
    <%= collection_select(:show_time, :room_id, Room.all, :id, :name,
        {:prompt => true}, {:required =>true, :class => "select" }) %>
  </div>

  <div class="field">
    <%= form.label :when, class: 'label' %>

    <%= form.text_field :when %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
