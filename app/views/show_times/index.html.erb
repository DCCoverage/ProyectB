<p id="notice"><%= notice %></p>

<h1>Show Times</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @show_times.each do |show_time| %>
      <tr>
        <td><%= link_to 'Show', show_time %></td>
        <td><%= link_to 'Edit', edit_show_time_path(show_time) %></td>
        <td><%= link_to 'Destroy', show_time, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

