<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Función</th>
      <th>Fila</th>
      <th>Columna</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movie_tickets.each do |movie_ticket| %>
      <tr>
        <td><%= movie_ticket.show_time_id %></td>
        <td><%= movie_ticket.row %></td>
        <td><%= movie_ticket.column %></td>
        <td><%= link_to 'Detalle', movie_ticket %></td>
        <td><%= link_to 'Editar', edit_movie_ticket_path(movie_ticket) %></td>
        <td><%= link_to 'Eliminar', movie_ticket, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
